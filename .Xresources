!###############
!# -- Fonts -- #
!###############
! run "fc-list" for a list of available fonts
*font: xft:LiberationMono for powerline:pixelsize=12
*intensityStyles: false
*letterSpace: -1


!################################
!# -- Some URxvt definitions -- #
!################################

URxvt*scrollBar: False
URxvt*scrollTtyOutput: False
URxvt*urgentOnBell: True
URxvt*scrollTtyKeypress: True
URxvt*secondaryScroll: True
URxvt*saveLines: 100000

! URxvt*.transparent: true
! URxvt*.shading: 0 to 99 darkens, 101 to 200 lightens
! URxvt*tintColor: Blue
! URxvt*.shading:10
! URxvt*background:0
! URxvt*background:#1C1C1C
URxvt.depth: 32
!URxvt.background: rgba:0000/0000/0000/dddd
URxvt*fading:0

URxvt*perl-lib        : /usr/lib/urxvt/perl/
URxvt*perl-ext-common : default,matcher,urxvt-colors
URxvt*url-launcher    : /usr/bin/xdg-open
URxvt*keysym.F12      : perl:urxvt-colors:
URxvt*colorUL         : #4682B4
URxvt*matcher.button  : 1
URxvt*tabbed.tabbar-fg: 5
URxvt*tabbed.tabbar-bg: 0
URxvt*tabbed.tab-fg   : 14
URxvt*tabbed.tab-bg   : 0
URxvt*dynamicColors   : on


!##############################
!# -- DEFAULT COLOR SCHEME -- #
!##############################
!solarized theme

URxvt*.background: [95]#1C1C1C
!*background:0
URxvt*foreground:#C3C3C3
URxvt*fadeColor: #CFCFCF
URxvt*cursorColor: #93a1a1
URxvt*pointerColorBackground: #586e75
URxvt*pointerColorForeground: #93a1a1

